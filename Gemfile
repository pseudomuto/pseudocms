source 'https://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.0.2'
gem 'jquery-rails'
gem 'batman-rails'

gem 'unicorn-rails'
gem 'foreman'

gem 'bcrypt-ruby'

